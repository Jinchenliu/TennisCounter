<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/textViewForPlayer"
                android:text="Player 1" />

            <TextView
                style="@style/textViewForPlayerName"
                android:text="Roger Federer" />

            <TextView
                style="@style/textViewForLabel"
                android:text="POINTS" />

            <TextView
                android:id="@+id/pointsForPlayer1"
                style="@style/textViewForPoints"
                android:text="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textViewForLabel"
                        android:text="SETS" />

                    <TextView
                        android:id="@+id/setsForPlayer1"
                        style="@style/textViewForSets"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textViewForLabel"
                        android:text="GAMES" />

                    <TextView
                        android:id="@+id/gamesForPlayer1"
                        style="@style/textViewForGames"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_score_1"
                style="@style/button"
                android:onClick="scoreForPlayer1"
                android:text="Score" />

            <Button
                style="@style/button"
                android:onClick="faultForPlayer1"
                android:text="Fault" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray">

        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/textViewForPlayer"
                android:text="Player 2" />

            <TextView
                style="@style/textViewForPlayerName"
                android:text="Rafael Nadal" />

            <TextView
                style="@style/textViewForLabel"
                android:text="POINTS" />

            <TextView
                android:id="@+id/pointsForPlayer2"
                style="@style/textViewForPoints"
                android:text="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textViewForLabel"
                        android:text="SETS" />

                    <TextView
                        android:id="@+id/setsForPlayer2"
                        style="@style/textViewForSets"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textViewForLabel"
                        android:text="GAMES" />

                    <TextView
                        android:id="@+id/gamesForPlayer2"
                        style="@style/textViewForGames"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>

            <Button
                style="@style/button"
                android:onClick="scoreForPlayer2"
                android:text="Score" />

            <Button
                style="@style/button"
                android:onClick="faultForPlayer2"
                android:text="Fault" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="reset"
        android:text="RESET" />

</RelativeLayout>